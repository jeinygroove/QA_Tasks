generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  cover           String
  averageRating   Float?   @default(0.0)
  totalRates      Int?     @default(0)
  description     String?
  descriptionLong String?
  review          Review[] @relation("r")
}

model Review {
  id     Int    @id @default(autoincrement())
  bookId Int
  name   String
  text   String
  stars  Int
  book   Book   @relation("r", fields: [bookId], references: [id])
}
